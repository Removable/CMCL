<UserControl x:Class="CMCL.Client.UserControl.LoadingUc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d" Height="96" Width="116"
             d:DesignHeight="96" d:DesignWidth="116">
    <Grid>
        <Border x:Name="VersionListLoading" Visibility="Visible" Background="{DynamicResource PrimaryBrush}"
                CornerRadius="10">
            <Grid>
                <hc:LoadingCircle Style="{StaticResource LoadingCircleLight}" Margin="34,10,35,40" />
                <TextBlock x:Name="LoadingBlock" TextAlignment="Center" Foreground="White" Text="加载中..."
                           Margin="0,66,0,0" />
            </Grid>
        </Border>
    </Grid>
</UserControl>