<Window x:Class="CMCL.Wpf.Window.LoadingFrm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:myUc="clr-namespace:CMCL.Wpf.UserControl"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        mc:Ignorable="d" WindowStyle="None" Background="Transparent" AllowsTransparency="True" ResizeMode="NoResize"
        Title="LoadingFrm" Height="96" Width="116" WindowStartupLocation="CenterOwner" Closing="LoadingFrm_OnClosing">
    <Grid>
        <Border x:Name="VersionListLoading" Visibility="Visible" Background="{DynamicResource PrimaryBrush}"
                CornerRadius="10">
            <Grid>
                <hc:LoadingCircle Style="{StaticResource LoadingCircleLight}" Margin="34,10,35,40" />
                <TextBlock TextAlignment="Center" Foreground="White" Text="{Binding CurrentLoadingTip}"
                           Margin="0,66,0,0" />
            </Grid>
        </Border>
    </Grid>
</Window>