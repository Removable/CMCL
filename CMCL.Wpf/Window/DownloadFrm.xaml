<Window x:Class="CMCL.Wpf.Window.DownloadFrm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        mc:Ignorable="d" WindowStyle="None" WindowStartupLocation="CenterOwner"
        Title="DownloadFrm" Height="320" Width="220" Closed="DownloadFrm_OnClosed">
    <Grid>
        <hc:CircleProgressBar Margin="50,37,50,108" Style="{DynamicResource ProgressBarInfoCircle}"
                              x:Name="DownloadProgressBar" />
        <TextBlock x:Name="TbCurrentTaskName" Height="20" TextAlignment="Center"
                   Margin="0,160,0,65" />
        <TextBlock x:Name="TbCurrentTaskDetail" Height="20" TextAlignment="Center"
                   Margin="0,185,0,40" />
        <TextBlock Text="关闭" TextAlignment="Center" FontSize="10" Cursor="Hand" Foreground="DarkGray"
                   Margin="92,261,92,0" MouseLeftButtonUp="UIElement_OnMouseLeftButtonUp" Height="15"
                   VerticalAlignment="Top" />
    </Grid>
</Window>